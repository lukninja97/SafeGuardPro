<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EntregaFragment"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrega"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Funcionario"
        android:textSize="24sp"/>

    <Spinner
        android:id="@+id/spinnerFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EPI"
        android:textSize="24sp"/>

    <Spinner
        android:id="@+id/spinnerEpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tvDataEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entregue em "
        android:textSize="20sp"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tvDataValidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expira em "
        android:textSize="20sp"
        android:layout_marginVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEntregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar entrega"
        android:layout_marginTop="18dp"/>

</LinearLayout>